#!/usr/bin/env bash

indent() {
    sed -u 's/^/       /'
}

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

HEROKU_YAML=$(cat "${ENV_DIR}/heroku.yml")

if [[ -z "${HEROKU_YAML}" ]]; then
    echo "HEROKU_YAML was not set. Aborting" | indent
    exit 1
fi

cp "${BUILD_DIR}/${HEROKU_YAML}" "${BUILD_DIR}/heroku.yml"

if ! [ $? ]; then
    echo "FAILED to copy a heroku.yml" | indent
    exit 1
fi

echo "Copied ${HEROKU_YAML} as heroku.yml successfully" | indent

APP_DIR=$(dirname "${BUILD_DIR}/${HEROKU_YAML}")

if [[ -f "${APP_DIR}/app.json" ]]; then
    cp "${APP_DIR}/app.json" "${BUILD_DIR}/app.json"
    echo "Copied ${APP_DIR}/app.json as app.json successfully" | indent
fi
